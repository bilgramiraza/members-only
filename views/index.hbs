<main>
  <h2>Members Only</h2>
  <section>
    {{#each posts}}
      <p>{{this.post}}</p>
      {{#if this.modified}}
        <span>by <em>{{this.user}}</em> on <em>{{this.time}}*</em></span>
      {{else}}
        <span>by <em>{{this.user}}</em> on <em>{{this.time}}</em></span>
      {{/if}}
    {{/each}}
  </section>
</main>
